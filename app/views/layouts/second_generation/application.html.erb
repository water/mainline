</head>
<body id="<%= controller.controller_name -%>">
	<div id="wrapper">
				<%= flashes %>
 		<div id="top-wrapper">
		<div id="top">
			<div id="logo">
				<h1><%= link_to("Gitorious", root_path) %></h1>
			</div>
			<ul id="menu">
				<li class="home"><%= link_to("Home", root_path) %></li>
	          	<li class="explore"><%= link_to "Activities", activity_path -%></li>
	          	<li class="about"><%= link_to t("views.layout.about"), about_path %></li>
				<li class="contact"><%= link_to "Contact", contact_path %> </li>
	          	<li class="register"><%= link_to t("views.layout.register"), new_user_path %></li>
				<li class="login"><%= link_to "Login", login_path %></li>

			</ul>
		</div> <!-- end of #top -->
		<div class="clear"></div>
		</div>

		<div class="content-container">
		<%= yield %>
		<div class="clear"></div>
		</div> <!-- end of content-container -->

	</div>
	<div id="footer">
	      
		<div id="footer-container">
			<%= render :partial => "layouts/common_footer"  -%>
			<div id="footer-links">
				<h3>Gitorious</h3>
				<ul>
					<li><%= link_to t("views.layout.home"), root_path -%></li>
		        	<li><%= link_to t("views.layout.about"), about_path -%></li>
		        	<li><%= link_to t("views.layout.faq"), faq_path -%></li>
		        	<li><%= link_to "Contact", contact_path -%></li>
				</ul>
				<ul>
					<li><%= link_to t("views.layout.discussion"), "http://groups.google.com/group/gitorious" -%></li>
		        	<li><%= link_to t("views.layout.blog"), "http://blog.gitorious.org" -%></li>
				</ul>
				<% if GitoriousConfig["terms_of_use"] -%>
				<ul>
					<li><a href="http://en.gitorious.org/tos">Terms of Service</a></li>
	          		<li><a href="http://en.gitorious.org/privacy_policy">Privacy Policy</a></li>
				</ul>
				<% end %>
			</div>
		</div>
		<div class="clear"></div>
	</div> <!-- end of the footer -->
</body>
