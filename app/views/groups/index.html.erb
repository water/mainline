<%
%>

<h1><%= t("views.groups.teams") -%></h1>
<ul>
  <% @groups.each do |group| -%>
    <li>
        <%= image_tag(group.avatar.url(:thumb), :alt => "Avatar", :width => "16", :style => "float: left; margin-right: 4px; ") %>
      <p>
		<strong><%= link_to h(group.name), group_path(group) -%></strong>
          (<%= pluralize group.members.count, t("views.groups.member_singular"), t("views.groups.member_plural") -%>,
          <%= pluralize group.repositories.count, t("views.groups.repo_singular"), t("views.groups.repo_plural") -%>)
      </p>
    </li>
  <% end -%>
</ul>

<%= will_paginate @groups -%>

<% content_for :sidebar do -%>
  <ul class="links navigation">
    <li class="team_new"><%= link_to "Create a new team", new_group_path -%></li>
  </ul>
<% end -%>
