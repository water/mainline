<%
%>

<%= breadcrumbs_from(@root) -%>

<h1><%= t("views.projects.edit_slug_title", :link => link_to( h(@project.title), project_path(@project))) -%></h1>

<%= error_messages_for :project -%>
<%= form_for(@project, :url => edit_slug_project_path(@project), :method => "put") do |f| -%>

  <div class="info_hint">
    <%= t('views.projects.edit_slug_disclaimer') %>
  </div>
  
  <p>
    <%= f.label :slug, t(:slug, :scope => 'activerecord.attributes.project') -%><br />
    <%= f.text_field :slug -%>
  </p>

  <%= f.submit t("views.projects.update_slug") -%>
<% end -%>


