<div id="content">
		<%= error_messages_for :user %>
  <%= form_for @user, :url => reset_password_path(params[:token]), :method => :put do |f| -%>
<div class="form-wrapper" id="resetpw">
		<div id="reset-pw">
				<h1><%= t("views.users.chg_passwd_title") %></h1>	
				<p>Type in your new password.</p>
						<div class="horisontal-shadow"></div>
						<ul>
							<li>
							    <%= f.label :password, t("views.users.new_passwd") -%>
							    <%= f.password_field :password, :class => "text" -%>
							</li>
							<li>
								<%= f.label :password_confirmation, t("views.users.new_passwd_conf") -%>
						    	<%= f.password_field :password_confirmation, :class => "text" -%>
							</li>
							<li>
								<div class="submit">
									    <%= f.submit t("views.users.chg_passwd_action") -%>
								</div>
							</li>
						</ul>
		</div>
</div>			
<% end -%>
</div>




