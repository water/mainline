<%
%>
<%= breadcrumbs_from(current_user) -%>

<h1><%= t("views.license.show_title") %></h1>
<p>
  <strong><%= t('views.license.terms_not_accepted') %>:</strong>
</p>

<div>
  <%= form_for(current_user, :url => user_license_path(current_user), :method => :put) do |f| %>
    <%= render :partial => "tos_link" -%>

    <p>
      <%= f.check_box :terms_of_use  -%>
      <label for="terms_of_use">I accept the Terms of Use</label>
    </p>
    
    <p>
      <%= f.submit "Accept" %>
    </p>
  <% end %>
</div>

